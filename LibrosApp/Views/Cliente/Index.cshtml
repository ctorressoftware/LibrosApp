@model IEnumerable<LibrosApp.Models.Viewmodels.ClienteViewModel>

@{
    ViewBag.Title = "Todos los clientes";
}

<div class="container-fluid">
    <h2>Inicio</h2>

    <p>
        @Html.ActionLink("Crear nuevo", "Create")
    </p>

    <div>
        @Html.Partial("_FilterInfo")
    </div>
</div>

<div id="table" class="container-fluid table-responsive">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Ciudad)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Pais)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pais)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>